<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">


<div class="row">
  <div class="col-auto">
    <h1>Dashboard</h1>
  </div>
</div>

<div class="container">
<div class="row mt-4">
  <div class="col-md-4">
    <h3>Create a Blog Post:</h3>

    <form class="form new-blogpost-form">
      <div class="form-group">
        <label for="blogpost-title">Title:</label>
        <input class="form-input" type="text" id="blogpost-title" name="blogpost-title" />
      </div>
      <div class="form-group">
        <label for="blogpost-content">Content:</label>
        <textarea class="form-input" id="blogpost-content" name="blogpost-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <div class="old-blogposts col-md-8">
    <div class="row">
    <div class="col-md-4 ml-4">
      <h3>Previous Posts:</h3>
      {{#each blogPosts}}
      <div class="blog-post p-5 pr-8 m-2" style="border: 0.5px black solid; border-radius: 5px; width: 25rem; text-align: center;" id="blogPost-{{id}}">
        <h5 class="title">{{title}}</h5>
        <p>Created by: {{user.username}}</p>
        <p class="content"> {{content}}</p>
        <button class="btn btn-primary" id="edit-btn-{{id}}" onclick="editBlogPost('{{id}}')">Edit</button>
        <button class="btn btn-light" id="save-btn-{{id}}" onclick="saveBlogPost({{id}})" style="display: none; background-color: gray">Save</button>
        <button class="btn btn-danger" id="delete-btn" onclick="deleteBlogPost('{{id}}')">Delete</button>
      </div>
      {{/each}}
    </div>
      </div>
    </div>
  </div>
</div>

  <script src="/js/dashboard.js"></script>